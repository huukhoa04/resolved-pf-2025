---
import AvatarCard from "../components/AvatarCard.astro";
import BioCard from "../components/BioCard.astro";
import JobCard from "../components/JobCard.astro";
import SnsCard from "../components/SnsCard.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/icon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="/styles/global.css" />
    <link
      rel="stylesheet"
      href="https://unpkg.com/@tabler/icons-webfont@latest/tabler-icons.min.css"
    />
    <title>Resolved | Portfolio</title>
    <!-- SEO Meta Tags -->
    <meta
      name="description"
      content="Resolved (Nguyen Huu Khoa) - Portfolio of a full-stack web developer and student at Da Nang University of Science and Technology."
    />
    <meta
      name="keywords"
      content="Resolved, Nguyen Huu Khoa, Portfolio, Web Developer, Full-stack, Front-end, Da Nang University of Science and Technology, MakeAI Solutions"
    />
    <meta name="author" content="Nguyen Huu Khoa" />
    <meta property="og:title" content="Resolved | Portfolio" />
    <meta
      property="og:description"
      content="Portfolio of Resolved (Nguyen Huu Khoa), full-stack web developer and student at Da Nang University of Science and Technology."
    />
    <meta property="og:type" content="website" />
    <meta
      property="og:image"
      content="https://www.gravatar.com/avatar/5c89b3c3f22b50ff678ca1c1898b58fc?d=identicon&s=200"
    />
    <meta property="og:url" content="https://resolved.id.vn/" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="Resolved | Portfolio" />
    <meta
      name="twitter:description"
      content="Portfolio of Resolved (Nguyen Huu Khoa), full-stack web developer and student at Da Nang University of Science and Technology."
    />
    <meta
      name="twitter:image"
      content="https://www.gravatar.com/avatar/5c89b3c3f22b50ff678ca1c1898b58fc?d=identicon&s=200"
    />
    <!-- End SEO Meta Tags -->
  </head><body>
    <main class="container">
      <AvatarCard />
      <BioCard />
      <JobCard />
      <SnsCard />
    </main>

    <!-- Floating particles for anime effect -->
    <div class="particles-container" id="particles"></div>

    <script>
      // Create floating particles
      function createParticles() {
        const container = document.getElementById("particles");
        if (!container) return;

        const particleCount = 15;

        for (let i = 0; i < particleCount; i++) {
          const particle = document.createElement("div");
          particle.className = "particle";

          // Random properties
          const size = Math.random() * 8 + 4;
          const animationDuration = Math.random() * 20 + 10;
          const opacity = Math.random() * 0.6 + 0.2;
          const hue = Math.random() * 360;

          particle.style.cssText = `
            position: fixed;
            width: ${size}px;
            height: ${size}px;
            background: hsl(${hue}, 70%, 60%);
            border-radius: 50%;
            opacity: ${opacity};
            left: ${Math.random() * 100}vw;
            top: ${Math.random() * 100}vh;
            animation: float ${animationDuration}s infinite linear;
            pointer-events: none;
            z-index: -1;
          `;

          container.appendChild(particle);
        }
      }

      // Add sparkle effect on card hover
      document.addEventListener("DOMContentLoaded", () => {
        createParticles();
      });
    </script>

    <style>
      .particles-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: -1;
      }

      @keyframes float {
        0% {
          transform: translateY(100vh) translateX(0px) rotate(0deg);
          opacity: 0;
        }
        10% {
          opacity: 0.8;
        }
        90% {
          opacity: 0.8;
        }
        100% {
          transform: translateY(-100px) translateX(100px) rotate(360deg);
          opacity: 0;
        }
      }
    </style>
  </body>
</html>
